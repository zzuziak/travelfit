<%= link_to event_path(event) do %>
  <% if events.include? event %>
    <div class="card-event" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.2)), url(<%= event.photo %>); background-position: center; background-size: cover;">
      <div class="<% if event.sport.category == "Fitness" %>
                    overlay-green
                  <% elsif event.sport.category == "Running" %>
                    overlay-red
                  <% elsif event.sport.category == "Racket sports" %>
                    overlay-grey
                  <% elsif event.sport.category == "Teamsports" %>
                    overlay-yellow
                  <% elsif event.sport.category == "Yoga" %>
                    overlay-mint
                  <% elsif event.sport.category == "Local adventure" %>
                    overlay-blue
                  <% end %>">
      </div>
      <div class="card-event-title"><h2><%= event.title.upcase %></h2></div>
      <div class="card-event-intensity"><%= render 'shared/intensity_alt', event: event %></div>
      <div class="card-event-address"><%= event.address %></div>
      <div class="card-event-date"><%= event.date.to_time.strftime('%b %d, %Y') %></div>
    </div>
  <% end %>
<% end %>
