<%= form_tag(events_path, method: :get, class:"form-group") do %>
    <div class="form-inline search-flex">
      <div class="row">
      <div class="col-xs-12">
        <%= text_field_tag :address, params[:address], placeholder: "Location", id:"event_address", class:"form-control search-stretch input-field " %>
        <%= date_field_tag :date_from, params[:date_from], placeholder: "When?", id:"range_start", class: "datepicker form-control input-field date-field datepicker" %>
        <!-- <%= date_field_tag :date_to, params[:date_to], placeholder: "TO", id:"range_end", class: "datepicker form-control input-field date-field" %> -->
        <%= submit_tag 'Search', name: nil, class:"btn search-button" %>
      </div>
    </div>
  </div>

<% end %>
