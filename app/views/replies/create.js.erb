function refreshForm(content) {
  const newReplyForm = document.getElementById('reply-form-<%= @post.id %>');
  newReplyForm.classList.toggle("visible");
}

function addReply(replyHTML) {
  const replies = document.getElementById("replies-<%= @post.id %>");
  replies.insertAdjacentHTML('beforebegin', replyHTML);
}

<% if @reply.errors.any? %>
  refreshForm('<%= j render "replies/new", reply: @reply, event: @event, post: @post %>');
<% else %>
  addReply('<%= j render "replies/show", post: @post, event: @event, reply: @reply %>');
  refreshForm('<%= j render "replies/new", event: @event, reply: @reply, post: @post %>');
  console.log("hello")
<% end %>
